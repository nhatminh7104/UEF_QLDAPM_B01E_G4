@model VillaManagementWeb.Models.RoomCategory

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-inner py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Chỉnh Sửa: @Model.Name</h2>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
    </div>

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BannerUrl" />

        <div class="row">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên danh mục <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mô tả ngắn</label>
                            <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ShortDescription" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Bài viết giới thiệu</label>
                            <textarea id="Description" asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light"><h6 class="mb-0 fw-bold">Ảnh Banner</h6></div>
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <img id="previewImg" src="@(string.IsNullOrEmpty(Model.BannerUrl) ? "/images/no-image.png" : Model.BannerUrl)"
                                 class="img-fluid rounded border mb-2 shadow-sm" style="max-height: 200px;" />
                        </div>
                        <label class="form-label small text-start w-100">Chọn ảnh mới để thay thế:</label>
                        <input type="file" name="bannerFile" class="form-control" accept="image/*" onchange="document.getElementById('previewImg').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="BannerUrl" class="text-danger small"></span>
                    </div>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light"><h6 class="mb-0 fw-bold">Danh sách tiện ích</h6></div>
                    <div class="card-body">
                        <textarea asp-for="Amenities" id="txtAmenities" class="form-control" rows="8"></textarea>
                        <span asp-validation-for="Amenities" class="text-danger small"></span>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle"></i> Nhập mỗi tiện ích trên <b>một dòng</b>.
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3 mb-5">
            <button type="submit" class="btn btn-primary px-5 btn-lg">Cập nhật</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        await Html.RenderPartialAsync("_Summernote", null, new ViewDataDictionary(ViewData) { { "height", 400 }, { "selector", "#Description" } });
    }
}