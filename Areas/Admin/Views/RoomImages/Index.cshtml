@model IEnumerable<VillaManagementWeb.Models.RoomImage>
@{
    ViewData["Title"] = "Quản lý hình ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-inner py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Thư Viện Ảnh</h2>
            <p class="text-muted small">Quản lý toàn bộ hình ảnh của các phòng.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm ảnh mới
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 20%;">Hình ảnh</th>
                            <th>Thuộc phòng</th>
                            <th>Đường dẫn</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ImageUrl" class="rounded border shadow-sm"
                                         style="width: 100px; height: 70px; object-fit: cover;" />
                                </td>
                                <td class="fw-bold text-primary">
                                    @(item.Room != null ? item.Room.RoomNumber : "N/A")
                                </td>
                                <td><small class="text-muted">@item.ImageUrl</small></td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>