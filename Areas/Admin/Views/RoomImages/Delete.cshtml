@model VillaManagementWeb.Models.RoomImage
@{
    ViewData["Title"] = "Xóa ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="card border-danger mx-auto shadow" style="max-width: 500px;">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0 fw-bold"><i class="fas fa-trash-alt"></i> Xác nhận xóa</h5>
        </div>
        <div class="card-body text-center p-4">
            <p class="mb-3">Bạn có chắc chắn muốn xóa hình ảnh này khỏi hệ thống?</p>

            <div class="mb-4">
                <img src="@Model.ImageUrl" class="img-thumbnail rounded" style="max-height: 200px;" />
                <div class="mt-2 fw-bold text-muted">Phòng: @(Model.Room?.RoomNumber ?? "N/A")</div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary px-4 me-2">Hủy</a>
                <button type="submit" class="btn btn-danger px-4">Xóa vĩnh viễn</button>
            </form>
        </div>
    </div>
</div>