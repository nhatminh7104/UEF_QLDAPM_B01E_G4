@model VillaManagementWeb.Models.RoomImage
@{
    ViewData["Title"] = "Sửa hình ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-inner py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Chỉnh Sửa Hình Ảnh</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Thuộc phòng</label>
                            <select asp-for="RoomId" class="form-select" asp-items="ViewBag.RoomId"></select>
                        </div>

                        <div class="mb-4 text-center">
                            <label class="form-label fw-bold d-block text-start">Ảnh hiện tại / Thay thế</label>

                            <img id="preview" src="@Model.ImageUrl" class="img-fluid rounded border mb-3"
                                 style="max-height: 250px; width: 100%; object-fit: contain; background: #f8f9fa;" />

                            <div class="text-start mb-2 small text-muted">Chọn file mới nếu muốn thay đổi:</div>
                            <input type="file" name="imageFile" class="form-control" accept="image/*"
                                   onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary py-2 fw-bold">Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>