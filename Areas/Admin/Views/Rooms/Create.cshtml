@model VillaManagementWeb.Models.Room

@{
    ViewData["Title"] = "Thêm phòng mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Thông tin phòng mới</div>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="RoomNumber">Số phòng / Mã phòng</label>
                                        <input asp-for="RoomNumber" class="form-control" placeholder="VD: VILLA-01" />
                                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Type">Loại phòng</label>
                                        <select asp-for="Type" class="form-control">
                                            <option value="Villa">Villa</option>
                                            <option value="Bungalow">Bungalow</option>
                                            <option value="Suite">Suite</option>
                                            <option value="Standard">Standard</option>
                                        </select>
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="PricePerNight">Giá mỗi đêm (VNĐ)</label>
                                        <input asp-for="PricePerNight" type="number" class="form-control" />
                                        <span asp-validation-for="PricePerNight" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ImageUrl">Ảnh đại diện phòng</label>
                                        <input type="file" name="imageFile" class="form-control-file" />
                                        <small class="form-text text-muted">Chọn ảnh minh họa cho phòng.</small>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label asp-for="Capacity">Sức chứa (Người)</label>
                                                <input asp-for="Capacity" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label asp-for="SquareFootage">Diện tích (m²)</label>
                                                <input asp-for="SquareFootage" class="form-control" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Tiện ích phòng</label>
                                        <div class="d-flex flex-wrap mt-2">
                                            <div class="form-check me-3">
                                                <label class="form-check-label">
                                                    <input asp-for="HasWifi" class="form-check-input" type="checkbox">
                                                    <span class="form-check-sign">Wifi miễn phí</span>
                                                </label>
                                            </div>
                                            <div class="form-check me-3">
                                                <label class="form-check-label">
                                                    <input asp-for="HasBreakfast" class="form-check-input"
                                                        type="checkbox">
                                                    <span class="form-check-sign">Bữa sáng</span>
                                                </label>
                                            </div>
                                            <div class="form-check me-3">
                                                <label class="form-check-label">
                                                    <input asp-for="HasPool" class="form-check-input" type="checkbox">
                                                    <span class="form-check-sign">Hồ bơi</span>
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input asp-for="HasTowel" class="form-check-input" type="checkbox">
                                                    <span class="form-check-sign">Khăn tắm</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-check mt-3">
                                        <label class="form-check-label">
                                            <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                            <span class="form-check-sign fw-bold text-primary">Kích hoạt kinh
                                                doanh</span>
                                        </label>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Description">Mô tả chi tiết</label>
                                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">
                                <span class="btn-label"><i class="fa fa-check"></i></span> Lưu phòng
                            </button>
                            <a asp-action="Index" class="btn btn-danger">Hủy bỏ</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}