@model IEnumerable<VillaManagementWeb.Models.Room>
@{
    ViewData["Title"] = "Quản lý phòng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Danh sách phòng</h4>
                <a asp-area="Admin" asp-controller="Rooms" asp-action="Create" class="btn btn-primary btn-round ms-auto">
                    <i class="fa fa-plus"></i> Thêm phòng mới
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="add-row" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Số phòng</th>
                            <th>Loại phòng</th>
                            <th>Giá/Đêm</th>
                            <th>Sức chứa</th>
                            <th>Diện tích</th>
                            <th style="width: 10%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RoomNumber</td>
                                <td>@item.Type</td>
                                <td>@item.PricePerNight.ToString("N0") VNĐ</td>
                                <td>@item.Capacity người</td>
                                <td>@item.SquareFootage m²</td>
                                <td>
                                    <div class="form-button-action">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-link btn-primary btn-lg"
                                           data-bs-toggle="tooltip" title="Chỉnh sửa">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-link btn-danger"
                                           data-bs-toggle="tooltip" title="Xóa">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Khởi tạo Datatable cho bảng #add-row
            $("#add-row").DataTable({
                pageLength: 5,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json' // Việt hóa bảng
                }
            });
        });
    </script>
}