@model IEnumerable<VillaManagementWeb.Models.Room>
@{
    ViewData["Title"] = "Quản lý phòng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Danh sách phòng</h4>
                <a asp-area="Admin" asp-controller="Rooms" asp-action="Create"
                    class="btn btn-primary btn-round ms-auto">
                    <i class="fa fa-plus"></i> Thêm phòng mới
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="add-row" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Số phòng</th>
                            <th>Loại phòng</th>
                            <th>Giá/Đêm</th>
                            <th>Tiện nghi</th>
                            <th>Tình trạng thuê</th>
                            <th>Vận hành</th>
                            <th style="width: 10%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)"
                                        alt="Room" class="rounded" style="width: 60px; height: 45px; object-fit: cover;" />
                                </td>
                                <td>@item.RoomNumber</td>
                                <td><span class="badge badge-info">@item.Type</span></td>
                                <td class="fw-bold">@item.PricePerNight.ToString("N0") VNĐ</td>
                                <td>
                                    <div class="d-flex gap-2 text-muted">
                                        <i class="fas fa-wifi @(item.HasWifi ? "text-primary" : "opacity-25")"
                                            title="Wifi"></i>
                                        <i class="fas fa-utensils @(item.HasBreakfast ? "text-success" : "opacity-25")"
                                            title="Bữa sáng"></i>
                                        <i class="fas fa-swimming-pool @(item.HasPool ? "text-info" : "opacity-25")"
                                            title="Hồ bơi"></i>
                                        <i class="fas fa-broom @(item.HasTowel ? "text-warning" : "opacity-25")"
                                            title="Khăn tắm"></i>
                                    </div>
                                    <small class="text-muted">@item.Capacity người | @item.SquareFootage m²</small>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">Đang hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Ngừng kinh doanh</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span>✓</span>
                                    }
                                    else
                                    {
                                        <span>✘</span>
                                    }
                                </td>
                                <td>
                                    <div class="form-button-action">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-primary btn-lg"
                                            data-bs-toggle="tooltip" title="Chỉnh sửa">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link btn-danger"
                                            data-bs-toggle="tooltip" title="Xóa">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#add-row").DataTable({
                pageLength: 10,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json'
                }
            });
        });
    </script>
}