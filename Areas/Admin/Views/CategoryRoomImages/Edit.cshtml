@model VillaManagementWeb.Models.CategoryRoomImage

@{
    ViewData["Title"] = "Chỉnh sửa ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh sửa ảnh</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <input type="hidden" asp-for="ImageUrl" />

            <div class="form-group mb-3">
                <label asp-for="RoomCategoryId" class="control-label font-weight-bold">Hạng phòng</label>
                <select asp-for="RoomCategoryId" class="form-control" asp-items="ViewBag.RoomCategoryId"></select>
                <span asp-validation-for="RoomCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label font-weight-bold">Thay đổi hình ảnh</label>
                <input type="file" name="imageFile" class="form-control" onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">

                <div class="mt-3">
                    <p>Ảnh hiện tại / Preview:</p>
                    <img id="preview" src="@Model.ImageUrl" class="img-thumbnail" style="max-height: 200px;" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}