@model VillaManagementWeb.Models.CategoryRoomImage

@{
    ViewData["Title"] = "Thêm ảnh Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thêm mới ảnh cho Hạng phòng</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="RoomCategoryId" class="control-label font-weight-bold">Chọn Hạng phòng</label>
                <select asp-for="RoomCategoryId" class="form-control" asp-items="ViewBag.RoomCategoryId"></select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label font-weight-bold">Chọn Hình ảnh</label>
                <div class="custom-file">
                    <input type="file" name="imageFile" class="form-control" onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                </div>
                <div class="mt-3">
                    <img id="preview" src="https://via.placeholder.com/300x200?text=No+Image" class="img-thumbnail" style="max-height: 200px;" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu hình ảnh" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}