@model IEnumerable<VillaManagementWeb.Models.News>

@{
    ViewData["Title"] = "Quản lý tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Danh sách bài viết</h4>
                <a asp-action="Create" class="btn btn-primary btn-round ms-auto">
                    <i class="fa fa-plus"></i> Viết bài mới
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="news-table" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tiêu đề</th>
                            <th>Chuyên mục</th>
                            <th>Ngày tạo</th>
                            <th style="width: 10%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)"
                                        class="rounded" style="width: 80px; height: 50px; object-fit: cover;" />
                                </td>
                                <td>
                                    <div class="fw-bold text-truncate" style="max-width: 250px;">@item.Title</div>
                                </td>
                                <td>
                                    <span class="badge badge-secondary">@item.Category</span>
                                </td>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="form-button-action">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                            class="btn btn-link btn-primary btn-lg">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link btn-danger">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#news-table").DataTable({
                pageLength: 10,
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json' },
                order: [[3, 'desc']], // Ưu tiên bài mới nhất lên đầu
                columnDefs: [{ orderable: false, targets: [0, 4] }]
            });
        });
    </script>
}