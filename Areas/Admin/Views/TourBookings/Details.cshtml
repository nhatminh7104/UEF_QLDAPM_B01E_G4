@model VillaManagementWeb.Models.TourBooking

@{
    ViewData["Title"] = "Chi Tiết Đặt Tour";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    // Logic xử lý màu sắc trạng thái
    var statusColor = Model.Status switch
    {
        "Confirmed" => "bg-emerald-100 text-emerald-700 border-emerald-200 dark:bg-emerald-900/30 dark:text-emerald-400 dark:border-emerald-800",
        "Pending" => "bg-amber-100 text-amber-700 border-amber-200 dark:bg-amber-900/30 dark:text-amber-400 dark:border-amber-800",
        "Cancelled" => "bg-red-100 text-red-700 border-red-200 dark:bg-red-900/30 dark:text-red-400 dark:border-red-800",
        "Completed" => "bg-blue-100 text-blue-700 border-blue-200 dark:bg-blue-900/30 dark:text-blue-400 dark:border-blue-800",
        _ => "bg-slate-100 text-slate-700 border-slate-200 dark:bg-slate-800 dark:text-slate-300 dark:border-slate-700"
    };

    var statusIcon = Model.Status switch
    {
        "Confirmed" => "check_circle",
        "Pending" => "hourglass_empty",
        "Cancelled" => "cancel",
        "Completed" => "task_alt",
        _ => "info"
    };

    // Lấy chữ cái đầu tên khách để làm Avatar
    var avatarInitials = !string.IsNullOrEmpty(Model.CustomerName) && Model.CustomerName.Length > 0
        ? Model.CustomerName.Substring(0, 1).ToUpper()
        : "K";
}

<script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

<script>
    tailwind.config = {
        corePlugins: {
            preflight: false,
            visibility: false
        },
        darkMode: "class",
        theme: {
            extend: {
                colors: {
                    "primary": "#13a4ec",
                    "primary-dark": "#0b8bc9",
                    "background-light": "#f6f7f8",
                    "background-dark": "#101c22",
                    "surface-light": "#ffffff",
                    "surface-dark": "#182830",
                    "text-main": "#0d171b",
                    "text-secondary": "#4c809a",
                },
                fontFamily: {
                    "display": ["Inter", "sans-serif"]
                },
            },
        },
    }
</script>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

<div class="flex-1 bg-background-light dark:bg-background-dark font-display text-text-main dark:text-slate-100 p-6">
    <div class="max-w-7xl mx-auto space-y-6">

        <div class="flex flex-col gap-4">
            <div class="flex items-center text-sm text-text-secondary dark:text-slate-400">
                <a href="/Admin" class="hover:text-primary transition-colors">Home</a>
                <span class="mx-2">/</span>
                <a asp-action="Index" class="hover:text-primary transition-colors">Bookings</a>
                <span class="mx-2">/</span>
                <span class="text-text-main dark:text-white font-medium">#@Model.Id</span>
            </div>

            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div class="flex flex-col gap-1">
                    <div class="flex items-center gap-3">
                        <h1 class="text-3xl font-black tracking-tight text-text-main dark:text-white">
                            Booking #@Model.Id
                        </h1>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full border @statusColor text-xs font-bold uppercase tracking-wide">
                            <span class="material-symbols-outlined text-[16px]">@statusIcon</span>
                            @Model.Status
                        </span>
                    </div>
                    <p class="text-sm text-text-secondary dark:text-slate-400">
                        Ngày tạo: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </p>
                </div>

                <div class="flex items-center gap-3">
                    <a asp-action="Index" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 text-text-main dark:text-slate-200 text-sm font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                        <span class="material-symbols-outlined text-[20px]">arrow_back</span>
                        Quay lại
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-white dark:bg-surface-dark border border-red-200 dark:border-red-900/50 text-red-600 dark:text-red-400 text-sm font-medium hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors">
                        <span class="material-symbols-outlined text-[20px]">cancel</span>
                        Hủy
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-primary hover:bg-primary-dark text-white text-sm font-bold shadow-sm transition-all shadow-primary/30">
                        <span class="material-symbols-outlined text-[20px]">edit</span>
                        Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

            <div class="lg:col-span-2 space-y-6">

                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-100 dark:border-slate-700 flex items-center justify-between bg-slate-50/50 dark:bg-slate-800/50">
                        <h2 class="text-base font-bold text-text-main dark:text-white flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">tour</span>
                            Thông tin Tour
                        </h2>
                    </div>
                    <div class="p-6">
                        <div class="flex flex-col sm:flex-row gap-6">
                            <div class="w-full sm:w-48 h-32 flex-shrink-0 rounded-lg bg-slate-200 dark:bg-slate-700 flex items-center justify-center text-slate-400">
                                <span class="material-symbols-outlined text-4xl">landscape</span>
                            </div>

                            <div class="flex-1 space-y-4">
                                <div>
                                    <h3 class="text-xl font-bold text-text-main dark:text-white mb-1">
                                        @(Model.Tour?.TourName ?? "Tên tour không có sẵn")
                                    </h3>
                                    <div class="flex items-center gap-1 text-text-secondary dark:text-slate-400 text-sm">
                                        <span class="material-symbols-outlined text-[18px]">location_on</span>
                                        <span>Điểm khởi hành: Villa Center</span>
                                    </div>
                                </div>

                                <div class="flex gap-4">
                                    <div class="bg-slate-50 dark:bg-slate-800/80 p-3 rounded-lg border border-slate-100 dark:border-slate-700 flex-1">
                                        <p class="text-xs text-text-secondary dark:text-slate-400 uppercase font-bold tracking-wide mb-1">Ngày khởi hành</p>
                                        <div class="flex items-center gap-2 text-text-main dark:text-slate-200 font-semibold">
                                            <span class="material-symbols-outlined text-primary text-[20px]">calendar_today</span>
                                            @Model.TourDate.ToString("dd/MM/yyyy")
                                        </div>
                                    </div>
                                    <div class="bg-slate-50 dark:bg-slate-800/80 p-3 rounded-lg border border-slate-100 dark:border-slate-700 flex-1">
                                        <p class="text-xs text-text-secondary dark:text-slate-400 uppercase font-bold tracking-wide mb-1">Giờ</p>
                                        <div class="flex items-center gap-2 text-text-main dark:text-slate-200 font-semibold">
                                            <span class="material-symbols-outlined text-primary text-[20px]">schedule</span>
                                            @Model.TourDate.ToString("HH:mm")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-100 dark:border-slate-700 bg-slate-50/50 dark:bg-slate-800/50">
                        <h2 class="text-base font-bold text-text-main dark:text-white flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">receipt_long</span>
                            Chi tiết đặt chỗ
                        </h2>
                    </div>
                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <h3 class="text-xs font-bold uppercase text-text-secondary dark:text-slate-400 tracking-wider">Số lượng khách</h3>
                            <div class="flex items-center justify-between p-3 bg-slate-50 dark:bg-slate-800 rounded-lg border border-slate-100 dark:border-slate-700">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center text-primary">
                                        <span class="material-symbols-outlined text-[18px]">group</span>
                                    </div>
                                    <span class="text-sm font-medium text-text-main dark:text-slate-200">Tổng số người</span>
                                </div>
                                <span class="text-lg font-black text-text-main dark:text-white">@Model.NumberOfPeople</span>
                            </div>
                        </div>

                        <div class="space-y-2 md:col-span-2">
                            <h3 class="text-xs font-bold uppercase text-text-secondary dark:text-slate-400 tracking-wider">Ghi chú / Yêu cầu đặc biệt</h3>
                            <div class="w-full min-h-[60px] p-4 bg-yellow-50 dark:bg-yellow-900/10 rounded-lg border border-yellow-100 dark:border-yellow-900/30 text-slate-700 dark:text-slate-300 text-sm leading-relaxed italic">
                                "Khách hàng chưa có ghi chú đặc biệt nào cho chuyến đi này."
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">

                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-100 dark:border-slate-700 bg-slate-50/50 dark:bg-slate-800/50">
                        <h2 class="text-base font-bold text-text-main dark:text-white flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">person</span>
                            Khách hàng
                        </h2>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-14 h-14 rounded-full bg-gradient-to-br from-primary to-blue-600 flex items-center justify-center text-white text-xl font-bold shadow-lg shadow-primary/20">
                                @avatarInitials
                            </div>
                            <div>
                                <h3 class="text-lg font-bold text-text-main dark:text-white">@Model.CustomerName</h3>
                                <p class="text-xs text-text-secondary dark:text-slate-400">Khách vãng lai</p>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="flex items-start gap-3">
                                <div class="p-2 bg-slate-100 dark:bg-slate-800 rounded-full text-text-secondary">
                                    <span class="material-symbols-outlined text-[18px]">contact_phone</span>
                                </div>
                                <div>
                                    <p class="text-xs text-text-secondary uppercase font-bold mb-0.5">Thông tin liên hệ</p>
                                    <p class="text-sm font-medium text-text-main dark:text-white">
                                        @(string.IsNullOrEmpty(Model.ContactInfo) ? "Chưa cập nhật" : Model.ContactInfo)
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-6 pt-4 border-t border-slate-100 dark:border-slate-700 flex gap-2">
                            <button class="flex-1 py-2 rounded-lg border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-300 text-sm font-medium hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                                Gửi Email
                            </button>
                        </div>
                    </div>
                </div>

                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-100 dark:border-slate-700 bg-slate-50/50 dark:bg-slate-800/50">
                        <h2 class="text-base font-bold text-text-main dark:text-white flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">payments</span>
                            Thanh toán
                        </h2>
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between items-end mb-6">
                            <span class="text-base font-bold text-text-secondary dark:text-slate-200">Tổng cộng</span>
                            <span class="text-2xl font-black text-primary">@Model.TotalPrice.ToString("N0") ₫</span>
                        </div>

                        @if (Model.Status == "Confirmed" || Model.Status == "Completed")
                        {
                            <div class="bg-emerald-50 dark:bg-emerald-900/20 rounded-lg p-3 border border-emerald-100 dark:border-emerald-800/50 flex items-center justify-between">
                                <div class="flex items-center gap-2">
                                    <span class="material-symbols-outlined text-emerald-600 dark:text-emerald-400">check_circle</span>
                                    <span class="text-sm font-bold text-emerald-800 dark:text-emerald-300">Đã thanh toán</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="bg-slate-50 dark:bg-slate-800 rounded-lg p-3 border border-slate-200 dark:border-slate-700 flex items-center justify-between">
                                <div class="flex items-center gap-2">
                                    <span class="material-symbols-outlined text-slate-500">pending</span>
                                    <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Chờ thanh toán</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
                    <h2 class="text-base font-bold text-text-main dark:text-white mb-4 flex items-center gap-2">
                        <span class="material-symbols-outlined text-text-secondary">description</span>
                        Ghi chú nội bộ
                    </h2>
                    <textarea class="w-full bg-slate-50 dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg text-sm text-text-main dark:text-white placeholder:text-slate-400 focus:ring-primary focus:border-primary p-3 min-h-[100px]" placeholder="Thêm ghi chú cho nhân viên khác..."></textarea>
                    <div class="flex justify-end mt-2">
                        <button class="text-xs font-bold text-primary hover:text-primary-dark uppercase tracking-wide">Lưu ghi chú</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>