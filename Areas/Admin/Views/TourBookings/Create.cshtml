@model VillaManagementWeb.Models.TourBooking

@{
    ViewData["Title"] = "Tạo Mới Đặt Tour";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

<script>
    tailwind.config = {
        corePlugins: {
            preflight: false,
            visibility: false
        },
        darkMode: "class",
        theme: {
            extend: {
                colors: {
                    "primary": "#13a4ec",
                    "primary-dark": "#0b8bc9",
                    "background-light": "#f6f7f8",
                    "background-dark": "#101c22",
                    "surface-light": "#ffffff",
                    "surface-dark": "#182830",
                    "text-main": "#0d171b",
                    "text-secondary": "#4c809a",
                    "border-color": "#cfdfe7",
                },
                fontFamily: {
                    "display": ["Inter", "sans-serif"]
                },
            },
        },
    }
</script>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

<div class="flex-1 bg-background-light dark:bg-background-dark font-display text-text-main dark:text-slate-100 p-6">
    <div class="max-w-7xl mx-auto">

        <div class="flex items-center text-sm text-text-secondary dark:text-slate-400 mb-6">
            <a href="/Admin" class="hover:text-primary transition-colors flex items-center gap-1">
                <span class="material-symbols-outlined text-[18px]">home</span>
            </a>
            <span class="mx-2">/</span>
            <a asp-action="Index" class="hover:text-primary transition-colors">Quản lý Tour</a>
            <span class="mx-2">/</span>
            <span class="text-text-main dark:text-white font-medium">Tạo đặt tour</span>
        </div>

        <div class="mb-8">
            <h1 class="text-3xl font-black tracking-tight text-text-main dark:text-white mb-2">Tạo Mới Đặt Tour</h1>
            <p class="text-text-secondary dark:text-slate-400 text-sm max-w-2xl">
                Điền thông tin chi tiết bên dưới để tạo hồ sơ đặt tour mới. Đảm bảo tất cả các trường bắt buộc đều được điền đầy đủ.
            </p>
        </div>

        <form asp-action="Create" class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
            <div asp-validation-summary="ModelOnly" class="text-red-500 col-span-full"></div>

            <div class="lg:col-span-8 flex flex-col gap-6">

                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
                    <div class="border-b border-slate-100 dark:border-slate-700 px-6 py-4 flex items-center justify-between bg-slate-50/50 dark:bg-slate-800/50">
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">tour</span>
                            <h3 class="text-base font-bold text-text-main dark:text-white">Chi tiết Tour</h3>
                        </div>
                    </div>
                    <div class="p-6 flex flex-col gap-6">
                        <div class="w-full">
                            <label asp-for="TourId" class="block text-sm font-semibold text-text-main dark:text-slate-200 mb-2">Chọn Tour <span class="text-red-500">*</span></label>
                            <div class="relative">
                                <select asp-for="TourId" asp-items="ViewBag.TourId" class="w-full rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] text-text-main dark:text-white h-11 px-4 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none appearance-none">
                                    <option value="" disabled selected>-- Chọn tour --</option>
                                </select>
                                <span class="material-symbols-outlined absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none">expand_more</span>
                            </div>
                            <span asp-validation-for="TourId" class="text-xs text-red-500 mt-1 block"></span>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="TourDate" class="block text-sm font-semibold text-text-main dark:text-slate-200 mb-2">Ngày khởi hành <span class="text-red-500">*</span></label>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none">calendar_month</span>
                                    <input asp-for="TourDate" type="datetime-local" class="w-full rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] text-text-main dark:text-white h-11 pl-10 pr-4 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none" />
                                </div>
                                <span asp-validation-for="TourDate" class="text-xs text-red-500 mt-1 block"></span>
                            </div>
                            <div>
                                <label asp-for="NumberOfPeople" class="block text-sm font-semibold text-text-main dark:text-slate-200 mb-2">Số lượng khách <span class="text-red-500">*</span></label>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none">group</span>
                                    <input asp-for="NumberOfPeople" type="number" min="1" class="w-full rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] text-text-main dark:text-white h-11 pl-10 pr-4 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none" placeholder="Ví dụ: 2" />
                                </div>
                                <span asp-validation-for="NumberOfPeople" class="text-xs text-red-500 mt-1 block"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
                    <div class="border-b border-slate-100 dark:border-slate-700 px-6 py-4 flex items-center justify-between bg-slate-50/50 dark:bg-slate-800/50">
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">person</span>
                            <h3 class="text-base font-bold text-text-main dark:text-white">Thông tin Khách hàng</h3>
                        </div>
                    </div>
                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            <label asp-for="CustomerName" class="block text-sm font-semibold text-text-main dark:text-slate-200 mb-2">Họ và tên khách <span class="text-red-500">*</span></label>
                            <input asp-for="CustomerName" class="w-full rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] text-text-main dark:text-white h-11 px-4 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none" placeholder="Nhập tên khách hàng" />
                            <span asp-validation-for="CustomerName" class="text-xs text-red-500 mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="ContactInfo" class="block text-sm font-semibold text-text-main dark:text-slate-200 mb-2">Liên hệ (SĐT / Email)</label>
                            <input asp-for="ContactInfo" class="w-full rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] text-text-main dark:text-white h-11 px-4 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none" placeholder="Nhập SĐT hoặc Email" />
                            <span asp-validation-for="ContactInfo" class="text-xs text-red-500 mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="Status" class="block text-sm font-semibold text-text-main dark:text-slate-200 mb-2">Trạng thái đặt chỗ</label>
                            <div class="relative">
                                <select asp-for="Status" class="w-full rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] text-text-main dark:text-white h-11 px-4 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all appearance-none outline-none">
                                    <option value="Pending">Chờ xác nhận (Pending)</option>
                                    <option value="Confirmed">Đã xác nhận (Confirmed)</option>
                                    <option value="Completed">Hoàn thành (Completed)</option>
                                    <option value="Cancelled">Đã hủy (Cancelled)</option>
                                </select>
                                <span class="material-symbols-outlined absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none">expand_more</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-4 sticky top-6">
                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 overflow-hidden">
                    <div class="bg-slate-50 dark:bg-slate-800/80 border-b border-slate-200 dark:border-slate-700 px-6 py-4">
                        <h3 class="text-base font-bold text-text-main dark:text-white">Tóm tắt thanh toán</h3>
                    </div>
                    <div class="p-6 flex flex-col gap-6">
                        <div>
                            <label asp-for="TotalPrice" class="block text-sm font-semibold text-text-main dark:text-slate-200 mb-2">Tổng tiền (VNĐ)</label>
                            <div class="relative">
                                <input asp-for="TotalPrice" type="number" class="w-full text-right font-bold text-lg rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] text-primary h-12 px-4 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none" placeholder="0" />
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-sm font-normal">VNĐ</span>
                            </div>
                            <span asp-validation-for="TotalPrice" class="text-xs text-red-500 mt-1 block"></span>
                        </div>

                        <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 border border-blue-100 dark:border-blue-900/50 flex gap-3">
                            <span class="material-symbols-outlined text-primary shrink-0 text-[20px]">info</span>
                            <p class="text-xs text-blue-800 dark:text-blue-200 leading-relaxed">
                                Vui lòng kiểm tra kỹ thông tin Tour và Số lượng khách trước khi tạo booking.
                            </p>
                        </div>

                        <div class="flex flex-col gap-3 pt-2">
                            <button type="submit" class="w-full bg-primary hover:bg-sky-600 text-white font-bold h-12 rounded-lg shadow-md shadow-primary/20 transition-all flex items-center justify-center gap-2">
                                <span class="material-symbols-outlined text-[20px]">check</span>
                                Tạo Đặt Tour
                            </button>
                            <a asp-action="Index" class="w-full bg-white dark:bg-slate-800 hover:bg-slate-50 dark:hover:bg-slate-700 text-text-secondary dark:text-slate-400 font-medium h-12 rounded-lg border border-slate-200 dark:border-slate-600 transition-all flex items-center justify-center">
                                Hủy bỏ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}