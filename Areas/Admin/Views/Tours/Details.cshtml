@model VillaManagementWeb.Models.Tour

@{
    ViewData["Title"] = "Chi tiết Tour";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Chi tiết Tour: @Model.TourName</h6>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Quay lại danh sách</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5">
                <div class="text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm mb-3" alt="@Model.TourName" />
                    }
                    else
                    {
                        <div class="alert alert-secondary">Chưa có hình ảnh</div>
                    }
                </div>
                <ul class="list-group mt-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>Giá vé:</strong>
                        <span class="text-success font-weight-bold">@Model.PricePerPerson.ToString("N0") VNĐ</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>Thời gian:</strong>
                        <span>@Model.DurationHours giờ</span>
                    </li>
                </ul>
            </div>
            <div class="col-md-7">
                <h4 class="text-dark">Mô tả</h4>
                <div class="p-3 bg-light rounded border">
                    <p style="white-space: pre-line;">@Model.Description</p>
                </div>
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
