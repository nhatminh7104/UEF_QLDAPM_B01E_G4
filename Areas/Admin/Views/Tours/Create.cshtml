@model VillaManagementWeb.Models.Tour

@{
    ViewData["Title"] = "Thêm Tour Mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thêm Tour Mới</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TourName" class="control-label font-weight-bold">Tên Tour</label>
                        <input asp-for="TourName" class="form-control" placeholder="Nhập tên tour..." />
                        <span asp-validation-for="TourName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PricePerPerson" class="control-label font-weight-bold">Giá vé / Người</label>
                        <input asp-for="PricePerPerson" class="form-control" type="number" />
                        <span asp-validation-for="PricePerPerson" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DurationHours" class="control-label font-weight-bold">Thời gian (Giờ)</label>
                        <input asp-for="DurationHours" class="form-control" type="number" step="0.5" />
                        <span asp-validation-for="DurationHours" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label font-weight-bold">Hình ảnh minh họa</label>
                        <div class="custom-file">
                            <input type="file" name="imageFile" class="custom-file-input" id="customFile" onchange="previewImage(this)">
                            <label class="custom-file-label" for="customFile">Chọn file ảnh...</label>
                        </div>
                        <img id="preview" class="mt-3 rounded shadow-sm" style="max-width: 100%; max-height: 200px; display: none;" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label font-weight-bold">Mô tả chi tiết</label>
                        <textarea asp-for="Description" class="form-control" rows="8" placeholder="Mô tả lịch trình..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu Tour</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Script hiển thị tên file và preview ảnh
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(input.files[0]);
                // Update label
                var fileName = input.files[0].name;
                $(input).next('.custom-file-label').html(fileName);
            }
        }
    </script>
}