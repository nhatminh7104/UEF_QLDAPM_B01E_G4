@model VillaManagementWeb.Models.Tour

@{
    ViewData["Title"] = "Cập nhật Tour";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cập nhật: @Model.TourName</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TourName" class="control-label font-weight-bold">Tên Tour</label>
                        <input asp-for="TourName" class="form-control" />
                        <span asp-validation-for="TourName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PricePerPerson" class="control-label font-weight-bold">Giá vé / Người</label>
                        <input asp-for="PricePerPerson" class="form-control" />
                        <span asp-validation-for="PricePerPerson" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DurationHours" class="control-label font-weight-bold">Thời gian (Giờ)</label>
                        <input asp-for="DurationHours" class="form-control" />
                        <span asp-validation-for="DurationHours" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label font-weight-bold">Hình ảnh</label>
                        <div class="custom-file mb-2">
                            <input type="file" name="imageFile" class="custom-file-input" id="customFile" onchange="previewImage(this)">
                            <label class="custom-file-label" for="customFile">Chọn ảnh mới...</label>
                        </div>
                        <div class="border p-2 rounded text-center bg-light">
                            <p class="text-muted small mb-1">Ảnh hiện tại / Preview</p>
                            <img id="preview" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/150" : Model.ImageUrl)"
                                 class="img-fluid rounded" style="max-height: 200px;" />
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label font-weight-bold">Mô tả chi tiết</label>
                        <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu thay đổi</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
                $(input).next('.custom-file-label').html(input.files[0].name);
            }
        }
    </script>
}