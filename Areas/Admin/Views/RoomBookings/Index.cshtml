@model IEnumerable<VillaManagementWeb.Models.RoomBooking>
@{
    ViewData["Title"] = "Quản lý đặt phòng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Danh sách đặt phòng</h4>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <a asp-area="Admin" asp-controller="Bookings" asp-action="Create"
                    class="btn btn-primary btn-round ms-auto">
                    <i class="fa fa-plus"></i> Thêm đặt phòng mới
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="add-row" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên khách hàng</th>
                            <th>Số phòng</th>
                            <th>Ngày check-in</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th style="width: 10%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CustomerName</td>
                                <td>
                                    @if (item.Room != null)
                                    {
                                        <span class="badge badge-info">@item.Room.RoomNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@item.CheckIn.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="fw-bold">@item.TotalAmount.ToString("N0") VNĐ</td>
                                <td>
                                    @if (item.Status == "Confirmed")
                                    {
                                        <span class="badge badge-success">Đã xác nhận</span>
                                    }
                                    else if (item.Status == "Cancelled")
                                    {
                                        <span class="badge badge-danger">Đã hủy</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Chờ xác nhận</span>
                                    }
                                </td>
                                <td>
                                    <div class="form-button-action">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-primary btn-lg"
                                            data-bs-toggle="tooltip" title="Chỉnh sửa">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link btn-danger"
                                            data-bs-toggle="tooltip" title="Xóa">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#add-row").DataTable({
                pageLength: 10,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json'
                }
            });
        });
    </script>
}