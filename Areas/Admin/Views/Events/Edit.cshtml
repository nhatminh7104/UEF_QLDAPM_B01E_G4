@model VillaManagementWeb.Models.Event

@{
    ViewData["Title"] = "Chỉnh Sửa Sự Kiện";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

<script>
    tailwind.config = {
        corePlugins: {
            preflight: false,
            visibility: false
        },
        darkMode: "class",
        theme: {
            extend: {
                colors: {
                    "primary": "#13a4ec",
                    "primary-dark": "#0b8bc9",
                    "background-light": "#f6f7f8",
                    "background-dark": "#101c22",
                    "surface-light": "#ffffff",
                    "surface-dark": "#182830",
                    "text-main": "#0d171b",
                    "text-secondary": "#4c809a",
                },
                fontFamily: {
                    "display": ["Inter", "sans-serif"]
                },
            },
        },
    }
</script>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

<div class="flex-1 bg-background-light dark:bg-background-dark font-display text-text-main dark:text-slate-100 p-6 relative h-full flex flex-col">
    <div class="max-w-7xl mx-auto w-full pb-24">

        <div class="flex items-center text-sm text-text-secondary dark:text-slate-400 mb-6">
            <a href="/Admin" class="hover:text-primary transition-colors flex items-center gap-1">
                <span class="material-symbols-outlined text-[18px]">home</span>
            </a>
            <span class="mx-2">/</span>
            <a asp-action="Index" class="hover:text-primary transition-colors">Danh sách sự kiện</a>
            <span class="mx-2">/</span>
            <span class="text-text-main dark:text-white font-medium">Chỉnh sửa</span>
        </div>

        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
            <div>
                <h1 class="text-3xl font-black text-text-main dark:text-white tracking-tight">@Model.Title</h1>
                <p class="mt-1 text-text-secondary dark:text-slate-400">Cập nhật thông tin chi tiết cho sự kiện này</p>
            </div>

            <div>
                @if (Model.EventDate >= DateTime.Now)
                {
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400 border border-green-200 dark:border-green-800">
                        <span class="w-1.5 h-1.5 rounded-full bg-green-500 mr-2 animate-pulse"></span>
                        Sắp diễn ra
                    </span>
                }
                else
                {
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-300 border border-slate-200 dark:border-slate-600">
                        Đã kết thúc
                    </span>
                }
            </div>
        </div>

        <form asp-action="Edit" enctype="multipart/form-data" class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div asp-validation-summary="ModelOnly" class="text-red-500 col-span-full"></div>
            <input type="hidden" asp-for="Id" />

            <input type="hidden" asp-for="ImageUrl" />

            <div class="lg:col-span-2 space-y-6">
                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
                    <h2 class="text-lg font-bold text-text-main dark:text-white mb-6 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">edit_note</span>
                        Thông tin chung
                    </h2>

                    <div class="space-y-6">
                        <div class="space-y-2">
                            <label asp-for="Title" class="text-sm font-semibold text-text-main dark:text-slate-300">Tên sự kiện <span class="text-red-500">*</span></label>
                            <input asp-for="Title" class="w-full h-11 px-4 rounded-lg bg-slate-50 dark:bg-[#101c22] border border-slate-200 dark:border-slate-600 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all text-text-main dark:text-white placeholder:text-slate-400" placeholder="Nhập tên sự kiện..." />
                            <span asp-validation-for="Title" class="text-xs text-red-500"></span>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="Location" class="text-sm font-semibold text-text-main dark:text-slate-300">Địa điểm tổ chức</label>
                            <div class="relative">
                                <span class="material-symbols-outlined absolute left-3 top-2.5 text-slate-400 pointer-events-none">location_on</span>
                                <input asp-for="Location" class="w-full h-11 pl-10 pr-4 rounded-lg bg-slate-50 dark:bg-[#101c22] border border-slate-200 dark:border-slate-600 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all text-text-main dark:text-white placeholder:text-slate-400" placeholder="Nhập địa điểm..." />
                            </div>
                            <span asp-validation-for="Location" class="text-xs text-red-500"></span>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="Description" class="text-sm font-semibold text-text-main dark:text-slate-300">Mô tả chi tiết</label>
                            <div class="w-full rounded-lg border border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] overflow-hidden focus-within:ring-2 focus-within:ring-primary/20 focus-within:border-primary transition-all">
                                <div class="flex items-center gap-1 p-2 border-b border-slate-200 dark:border-slate-600 bg-white dark:bg-[#1a2c35]">
                                    <button type="button" class="p-1.5 rounded hover:bg-slate-100 dark:hover:bg-slate-700 text-slate-500 transition-colors"><span class="material-symbols-outlined text-[20px]">format_bold</span></button>
                                    <button type="button" class="p-1.5 rounded hover:bg-slate-100 dark:hover:bg-slate-700 text-slate-500 transition-colors"><span class="material-symbols-outlined text-[20px]">format_italic</span></button>
                                    <div class="w-px h-5 bg-slate-300 dark:bg-slate-600 mx-1"></div>
                                    <button type="button" class="p-1.5 rounded hover:bg-slate-100 dark:hover:bg-slate-700 text-slate-500 transition-colors"><span class="material-symbols-outlined text-[20px]">format_list_bulleted</span></button>
                                </div>
                                <textarea asp-for="Description" class="w-full min-h-[200px] p-4 bg-transparent border-none outline-none resize-y text-text-main dark:text-white leading-relaxed placeholder:text-slate-400 focus:ring-0" placeholder="Viết mô tả sự kiện..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-1 space-y-6">
                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
                    <h2 class="text-lg font-bold text-text-main dark:text-white mb-4 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">image</span>
                        Ảnh bìa
                    </h2>

                    <div class="space-y-4">
                        <div class="relative group w-full aspect-video rounded-lg overflow-hidden border-2 border-dashed border-slate-300 dark:border-slate-600 bg-slate-50 dark:bg-[#101c22] hover:border-primary transition-colors">

                            <img id="imagePreview" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "" : Model.ImageUrl)"
                                 class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "hidden" : "") w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                 alt="Event cover" />

                            <div id="imagePlaceholder" class="@(!string.IsNullOrEmpty(Model.ImageUrl) ? "hidden" : "") absolute inset-0 flex flex-col items-center justify-center text-slate-400 gap-2 pointer-events-none">
                                <span class="material-symbols-outlined text-4xl">cloud_upload</span>
                                <span class="text-xs font-medium">Nhấn để tải ảnh lên</span>
                            </div>

                            <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex flex-col items-center justify-center text-white cursor-pointer pointer-events-none">
                                <span class="material-symbols-outlined text-3xl">edit</span>
                                <span class="text-xs font-bold mt-1">Thay đổi ảnh</span>
                            </div>

                            <input type="file" name="ImageFile" id="imageInput" accept="image/*"
                                   class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10"
                                   onchange="previewImage(this)" />
                        </div>

                        <p class="text-xs text-center text-text-secondary dark:text-slate-500">
                            Hỗ trợ: JPG, PNG, WEBP (Max 5MB)
                        </p>
                    </div>
                </div>

                <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
                    <h2 class="text-lg font-bold text-text-main dark:text-white mb-4 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">schedule</span>
                        Thời gian & Vé
                    </h2>

                    <div class="space-y-5">
                        <div class="space-y-2">
                            <label asp-for="EventDate" class="text-sm font-semibold text-text-main dark:text-slate-300">Thời gian bắt đầu</label>
                            <input asp-for="EventDate" class="w-full h-10 px-3 rounded-lg bg-slate-50 dark:bg-[#101c22] border border-slate-200 dark:border-slate-600 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none text-text-main dark:text-white text-sm" type="datetime-local" />
                            <span asp-validation-for="EventDate" class="text-xs text-red-500"></span>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="TotalTickets" class="text-sm font-semibold text-text-main dark:text-slate-300">Tổng số vé</label>
                            <div class="flex items-center">
                                <button type="button" onclick="document.getElementById('TotalTickets').stepDown()" class="w-10 h-10 rounded-l-lg bg-slate-100 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 flex items-center justify-center hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors text-slate-600 dark:text-slate-300">
                                    <span class="material-symbols-outlined text-sm">remove</span>
                                </button>
                                <input asp-for="TotalTickets" class="w-full h-10 text-center bg-white dark:bg-[#101c22] border-y border-slate-200 dark:border-slate-600 focus:outline-none text-text-main dark:text-white font-medium" type="number" min="0" />
                                <button type="button" onclick="document.getElementById('TotalTickets').stepUp()" class="w-10 h-10 rounded-r-lg bg-slate-100 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 flex items-center justify-center hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors text-slate-600 dark:text-slate-300">
                                    <span class="material-symbols-outlined text-sm">add</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="fixed bottom-0 left-0 lg:left-[260px] right-0 bg-white dark:bg-[#1a262d] border-t border-slate-200 dark:border-slate-700 px-8 py-4 z-20 flex items-center justify-end gap-4 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)] transition-all duration-300">
                <a asp-action="Index" class="px-6 py-2.5 rounded-lg border border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-200 font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors text-sm">
                    Hủy bỏ
                </a>
                <button type="submit" class="px-6 py-2.5 rounded-lg bg-primary text-white font-bold hover:bg-sky-500 transition-all shadow-md shadow-primary/20 flex items-center gap-2 text-sm">
                    <span class="material-symbols-outlined text-[20px]">save</span>
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const placeholder = document.getElementById('imagePlaceholder');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.classList.remove('hidden');
                    placeholder.classList.add('hidden');
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}