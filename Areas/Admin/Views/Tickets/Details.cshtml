@model VillaManagementWeb.Models.Ticket

@{
    ViewData["Title"] = "Chi Tiết Vé";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout_Tailwind.cshtml";
    var totalAmount = Model.Price * Model.Quantity;
}

<script>
    window.tailwind = {
        config: {
            corePlugins: {
                preflight: false, 
                visibility: false,
            },
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13a4ec",
                        "primary-dark": "#0b8bc9",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101c22",
                        "surface-light": "#ffffff",
                        "surface-dark": "#182830",
                        "text-main": "#0d171b",
                        "text-secondary": "#4c809a",
                        "border-light": "#e7eff3",
                        "border-dark": "#2a3e4b",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"],
                        "body": ["Inter", "sans-serif"],
                    },
                },
            },
        }
    }
</script>


<div class="flex-1 bg-background-light dark:bg-background-dark min-h-screen p-6 lg:p-8 font-display text-text-main dark:text-white">
    <div class="mx-auto max-w-5xl">

        <div class="mb-8">
            <div class="flex justify-start mb-6">
                <a asp-action="Index" class="group flex items-center gap-2 text-text-secondary hover:text-primary dark:text-slate-400 dark:hover:text-primary transition-colors text-sm font-medium">
                    <span class="material-symbols-outlined text-[20px]">arrow_back</span>
                    <span>Quay lại danh sách</span>
                </a>
            </div>

            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div class="flex flex-col gap-1">
                    <h1 class="text-3xl font-black tracking-tight text-text-main dark:text-white flex flex-wrap items-center gap-3">
                        Chi Tiết Vé <span class="text-text-secondary dark:text-slate-500 font-medium text-2xl">#@Model.Id</span>
                    </h1>
                    <p class="text-text-secondary dark:text-slate-400 text-sm">Quản lý thông tin chi tiết và trạng thái vé tham dự</p>
                </div>
                <div class="flex gap-3">
                    <button onclick="window.print()" class="flex items-center justify-center gap-2 h-10 px-5 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-200 text-sm font-bold hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors shadow-sm">
                        <span class="material-symbols-outlined text-[18px]">print</span>
                        <span>In Vé</span>
                    </button>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="flex items-center justify-center gap-2 h-10 px-5 rounded-lg bg-primary hover:bg-primary-dark text-white text-sm font-bold transition-colors shadow-sm shadow-primary/30">
                        <span class="material-symbols-outlined text-[18px]">edit</span>
                        <span>Chỉnh sửa</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-surface-light dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-3 min-h-[500px]">

                <div class="lg:col-span-2 p-6 sm:p-8 flex flex-col gap-8 border-b lg:border-b-0 lg:border-r border-slate-200 dark:border-slate-700">

                    <div class="flex flex-col gap-4">
                        <div class="flex items-center gap-2 pb-2 border-b border-slate-100 dark:border-slate-700/50">
                            <span class="material-symbols-outlined text-primary text-[22px]">event_available</span>
                            <h3 class="text-lg font-bold text-text-main dark:text-white">Thông tin sự kiện</h3>
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold uppercase tracking-wider text-text-secondary dark:text-slate-500">Sự kiện</span>
                                <p class="text-base font-semibold text-primary">@Model.Event?.Title</p>
                            </div>
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold uppercase tracking-wider text-text-secondary dark:text-slate-500">Thời gian tổ chức</span>
                                <p class="text-base font-medium text-text-main dark:text-white">
                                    @(Model.Event?.EventDate.ToString("dd/MM/yyyy - HH:mm") ?? "N/A")
                                </p>
                            </div>
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold uppercase tracking-wider text-text-secondary dark:text-slate-500">Loại vé</span>
                                <div class="flex items-center gap-2">
                                    <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-bold bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300 border border-purple-200 dark:border-purple-800">
                                        @Model.TicketType
                                    </span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold uppercase tracking-wider text-text-secondary dark:text-slate-500">Địa điểm / Khu vực</span>
                                <p class="text-base font-medium text-text-main dark:text-white">
                                    @(Model.Event?.Location ?? "N/A")
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="flex flex-col gap-4">
                        <div class="flex items-center gap-2 pb-2 border-b border-slate-100 dark:border-slate-700/50">
                            <span class="material-symbols-outlined text-primary text-[22px]">person</span>
                            <h3 class="text-lg font-bold text-text-main dark:text-white">Khách hàng</h3>
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold uppercase tracking-wider text-text-secondary dark:text-slate-500">Họ và tên</span>
                                <div class="flex items-center gap-2">
                                    <div class="w-8 h-8 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center text-xs font-bold text-slate-600 dark:text-slate-300">
                                        @(Model.CustomerName?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                    <p class="text-base font-medium text-text-main dark:text-white">@Model.CustomerName</p>
                                </div>
                            </div>
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold uppercase tracking-wider text-text-secondary dark:text-slate-500">Email</span>
                                <div class="flex items-center gap-2 group cursor-pointer" onclick="navigator.clipboard.writeText('@Model.CustomerEmail')">
                                    <p class="text-base font-medium text-text-main dark:text-white">@Model.CustomerEmail</p>
                                    <span class="material-symbols-outlined text-[16px] text-slate-400 opacity-0 group-hover:opacity-100 transition-opacity" title="Copy">content_copy</span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold uppercase tracking-wider text-text-secondary dark:text-slate-500">Ngày đặt vé</span>
                                <p class="text-base font-medium text-text-main dark:text-white">@Model.BookingDate.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    </div>

                    <div class="flex flex-col gap-4">
                        <div class="flex items-center gap-2 pb-2 border-b border-slate-100 dark:border-slate-700/50">
                            <span class="material-symbols-outlined text-primary text-[22px]">payments</span>
                            <h3 class="text-lg font-bold text-text-main dark:text-white">Thanh toán</h3>
                        </div>
                        <div class="grid grid-cols-2 sm:grid-cols-3 gap-6 bg-slate-50 dark:bg-slate-800/50 p-5 rounded-xl border border-slate-100 dark:border-slate-700/50">
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold text-text-secondary dark:text-slate-500">Đơn giá</span>
                                <p class="text-base font-semibold text-text-main dark:text-white">@Model.Price.ToString("N0") ₫</p>
                            </div>
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-bold text-text-secondary dark:text-slate-500">Số lượng</span>
                                <p class="text-base font-semibold text-text-main dark:text-white">@Model.Quantity.ToString("00")</p>
                            </div>
                            <div class="col-span-2 sm:col-span-1 flex flex-col gap-1 sm:items-end">
                                <span class="text-xs font-bold text-text-secondary dark:text-slate-500">Tổng cộng</span>
                                <p class="text-xl font-black text-primary">@totalAmount.ToString("N0") ₫</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="lg:col-span-1 p-6 sm:p-8 bg-slate-50/50 dark:bg-slate-800/30 flex flex-col gap-8 items-center text-center">

                    <div class="w-full">
                        <div class="bg-green-100 dark:bg-green-900/30 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-300 px-4 py-3 rounded-lg flex items-center justify-center gap-2 w-full">
                            <span class="material-symbols-outlined text-[20px]">check_circle</span>
                            <span class="font-bold text-sm">Đã thanh toán</span>
                        </div>
                    </div>

                    <div class="flex flex-col items-center gap-4 bg-white dark:bg-slate-800 p-6 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm w-full max-w-[280px]">
                        <div class="relative group">
                            <div class="w-48 h-48 bg-white rounded-lg p-2 border border-slate-100">
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@Model.QRCode"
                                     alt="Ticket QR Code"
                                     class="w-full h-full object-contain" />
                            </div>
                        </div>
                        <div class="flex flex-col gap-1 w-full">
                            <p class="text-xs text-slate-500 font-bold uppercase tracking-wide">Mã Định Danh (ID)</p>
                            <div class="relative group cursor-pointer" onclick="navigator.clipboard.writeText('@Model.QRCode')">
                                <p class="text-lg font-mono font-bold text-text-main dark:text-white tracking-widest break-all">
                                    @Model.QRCode
                                </p>
                                <span class="absolute -right-6 top-1/2 -translate-y-1/2 material-symbols-outlined text-sm text-slate-300 opacity-0 group-hover:opacity-100 transition-opacity">content_copy</span>
                            </div>
                        </div>

                        <a href="https://api.qrserver.com/v1/create-qr-code/?size=500x500&data=@Model.QRCode" download="ticket-qr-@Model.Id" target="_blank" class="w-full mt-2 flex items-center justify-center gap-2 h-9 px-4 rounded-md bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-200 text-xs font-bold hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors">
                            <span class="material-symbols-outlined text-[16px]">download</span>
                            Tải mã QR
                        </a>
                    </div>

                    <div class="w-full flex flex-col gap-3 p-4 border-t border-slate-200 dark:border-slate-700">
                        <div class="flex justify-between items-center">
                            <span class="text-sm font-bold text-slate-600 dark:text-slate-300">Trạng thái sử dụng</span>
                            @if (Model.IsUsed)
                            {
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-bold bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-300 border border-green-200">
                                    Đã sử dụng
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-bold bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-300 border border-slate-200 dark:border-slate-600">
                                    Chưa sử dụng
                                </span>
                            }
                        </div>
                        <p class="text-xs text-slate-400 dark:text-slate-500 text-left">
                            @(Model.IsUsed ? "Vé này đã được quét và check-in vào sự kiện." : "Vé này chưa được quét tại cổng check-in.")
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-slate-50 dark:bg-slate-900 border-t border-slate-200 dark:border-slate-700 px-6 py-3 flex justify-between items-center text-xs text-slate-500 dark:text-slate-400 font-medium">
                <span>Tạo lúc: @Model.BookingDate.ToString("dd/MM/yyyy HH:mm")</span>
                <span>ID hệ thống: @Model.Id</span>
            </div>
        </div>
    </div>
</div>
