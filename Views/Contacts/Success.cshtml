@{
    ViewData["Title"] = "Gửi thành công";
}

<style>
    
    .success-wrapper {
        background-color: #fff9f3;
        min-height: 70vh; 
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 50px 0;
        border-radius: 4px;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .success-title {
        font-family: 'Playfair Display', serif;
        color: #a67c52;
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .success-sub {
        color: #888;
        font-weight: 300;
        margin-bottom: 2.5rem;
        font-size: 1rem; /* Tăng nhẹ cỡ chữ cho dễ đọc */
        max-width: 600px; /* Giới hạn chiều rộng dòng chữ cho đẹp */
        margin-left: auto;
        margin-right: auto;
    }

    .btn-success-back {
        background-color: #a67c52;
        color: white;
        border: 1px solid #a67c52;
        padding: 12px 30px;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
        text-decoration: none;
        display: inline-block;
        margin-right: 15px;
        border-radius: 4px;
        transition: 0.3s;
        font-weight: 500;
    }

        .btn-success-back:hover {
            background-color: #8c6642;
            color: white;
            transform: translateY(-2px); /* Hiệu ứng bay lên nhẹ */
            box-shadow: 0 5px 15px rgba(166, 124, 82, 0.2);
        }

    .btn-success-home {
        background-color: transparent;
        color: #a67c52;
        border: 1px solid #a67c52;
        padding: 12px 30px;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
        text-decoration: none;
        display: inline-block;
        border-radius: 4px;
        transition: 0.3s;
        font-weight: 500;
    }

        .btn-success-home:hover {
            background-color: #a67c52;
            color: white;
            transform: translateY(-2px);
        }

    /* Thêm icon check cho sinh động */
    .icon-check-circle {
        font-size: 4rem;
        color: #a67c52;
        margin-bottom: 20px;
        display: block;
    }
</style>

<div class="container">
    <div class="success-wrapper">
        <div class="content-box">
            <i class="fa-regular fa-circle-check icon-check-circle"></i>

            <h1 class="success-title">Gửi liên hệ thành công</h1>

            <p class="success-sub">
                Cảm ơn bạn đã liên hệ với chúng tôi. Đội ngũ tư vấn sẽ phản hồi lại thông tin của bạn trong thời gian sớm nhất!
            </p>

            <div>
                <a href="/Contacts" class="btn-success-back">
                    GỬI TIẾP
                </a>

                <a href="/" class="btn-success-home">
                    VỀ TRANG CHỦ &rarr;
                </a>
            </div>
        </div>
    </div>
</div>