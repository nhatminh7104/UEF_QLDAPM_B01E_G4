@model VillaManagementWeb.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Liên hệ";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        color: #555;
        background-color: #fffaf7;
        overflow-x: hidden;
    }

    .contact-hero {
        position: relative;
        height: 60vh;
        width: 100%;
        background: url('/images/contacts/image1.png') center center / cover no-repeat;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .contact-hero::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.4);
        }

    .hero-title {
        position: relative;
        color: #fff;
        font-family: 'Playfair Display', serif;
        font-size: 4rem;
        font-weight: 600;
        z-index: 2;
        letter-spacing: 2px;
        text-shadow: 0 4px 10px rgba(0,0,0,0.3);
        margin-top: 50px;
    }

    .contact-section {
        padding: 100px 0;
    }

    .info-box {
        margin-bottom: 30px;
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border-left: 4px solid #a67c52;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        font-size: 1rem;
        color: #666;
    }

        .info-item:last-child {
            margin-bottom: 0;
        }

        .info-item i {
            color: #a67c52;
            width: 40px;
            height: 40px;
            background: #fdf8f4;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 15px;
            transition: 0.3s;
        }

        .info-item:hover i {
            background: #a67c52;
            color: #fff;
            transform: rotate(360deg);
        }

    .map-container {
        margin: 30px 0;
        width: 100%;
        height: 400px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .map-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .social-links {
        margin-top: 25px;
    }

        .social-links a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            background-color: #fff;
            color: #a67c52;
            border: 1px solid #a67c52;
            border-radius: 50%;
            margin-right: 15px;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 1.1rem;
        }

            .social-links a:hover {
                background-color: #a67c52;
                color: #fff;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(166, 124, 82, 0.4);
            }

    .form-wrapper {
        background: #fff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }

    .form-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        color: #a67c52;
        text-align: center;
        margin-bottom: 40px;
        position: relative;
    }

        .form-title::after {
            content: "";
            display: block;
            width: 60px;
            height: 3px;
            background: #a67c52;
            margin: 15px auto 0;
        }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #444;
        margin-bottom: 8px;
        display: block;
    }

    .form-control-custom {
        width: 100%;
        padding: 14px 20px;
        border: 1px solid #eee;
        background: #fdfdfd;
        border-radius: 4px;
        outline: none;
        font-family: 'Montserrat', sans-serif;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .form-control-custom:focus {
            border-color: #a67c52;
            background: #fff;
            box-shadow: 0 0 0 4px rgba(166, 124, 82, 0.1);
        }

    .btn-submit {
        width: 100%;
        background-color: #a67c52;
        color: #fff;
        border: none;
        padding: 16px 30px;
        text-transform: uppercase;
        font-weight: 600;
        font-size: 0.9rem;
        letter-spacing: 1.5px;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
        box-shadow: 0 4px 15px rgba(166, 124, 82, 0.3);
    }

        .btn-submit:hover {
            background-color: #8e7050;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(166, 124, 82, 0.4);
        }

    .phone-input-group {
        position: relative;
    }

    .flag-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        width: 24px;
        border-radius: 2px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .phone-input-group input {
        padding-left: 50px;
    }

  
    /* Chữ báo lỗi (thay thế cho .txt-error cũ) */
    .field-validation-error {
        color: #c4763e; /* Màu cam nâu */
        font-size: 13px;
        font-weight: 700; /* In đậm */
        margin-top: 6px;
        display: block;
    }

    .input-validation-error {
        border-color: #c4763e !important;
        background-color: #fffaf7; /* Nền hơi hồng nhẹ cảnh báo */
    }


</style>

<div class="contact-hero">
    <h1 class="hero-title" data-aos="fade-down" data-aos-duration="1000">Liên hệ</h1>
</div>

<div class="container contact-section">
    <div class="row">

        <div class="col-lg-5 col-md-6 mb-5" data-aos="fade-right" data-aos-duration="1000">
            <div class="info-box">
                <div class="info-item">
                    <i class="fa-solid fa-location-dot"></i>
                    <span>Thôn Mít Mái, Yên Bài, Ba Vì, Hà Nội</span>
                </div>
                <div class="info-item">
                    <i class="fa-solid fa-phone"></i>
                    <span>092 981 6699</span>
                </div>
                <div class="info-item">
                    <i class="fa-regular fa-envelope"></i>
                    <span>booking@thewanderingrosebavi.com</span>
                </div>
            </div>

            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3723.656866970946!2d105.42075647956291!3d21.046411330604595!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31345d6c9249e023%3A0x2549969272c7904d!2sVilla%20de%20Montana!5e0!3m2!1svi!2sus!4v1768100726151!5m2!1svi!2sus"
                        width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>

            <div class="social-links">
                <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                <a href="#"><i class="fa-brands fa-pinterest-p"></i></a>
                <a href="#"><i class="fa-brands fa-youtube"></i></a>
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 offset-lg-1" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="200">
            <div class="form-wrapper">
                <h2 class="form-title">Gửi tin nhắn</h2>

                <form asp-action="Index" method="post">

                    <div asp-validation-summary="ModelOnly" class="field-validation-error mb-3"></div>

                    <div class="form-group">
                        <label class="form-label">Họ và tên *</label>
                        <input asp-for="FullName" class="form-control-custom" placeholder="Nhập họ và tên của bạn">
                        <span asp-validation-for="FullName"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email *</label>
                        <input asp-for="Email" class="form-control-custom" placeholder="Nhập gmail của bạn">
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Số điện thoại *</label>
                        <div class="phone-input-group">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/2/21/Flag_of_Vietnam.svg" class="flag-icon" alt="VN">
                            <input asp-for="PhoneNumber" class="form-control-custom" placeholder="Nhập số điện thoại của bạn">
                        </div>
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Địa chỉ</label>
                        <input asp-for="Address" class="form-control-custom" placeholder="Nhập địa chỉ của bạn (Tùy chọn)">
                        <span asp-validation-for="Address"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Lời nhắn *</label>
                        <textarea asp-for="Message" class="form-control-custom" rows="5" placeholder="Bạn muốn đặt phòng ngày nào hay cần tư vấn gì?"></textarea>
                        <span asp-validation-for="Message"></span>
                    </div>

                    <button type="submit" class="btn-submit">GỬI YÊU CẦU ĐẶT LỊCH</button>
                </form>
            </div>
        </div>

    </div>
</div>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        once: true,
        offset: 100
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}