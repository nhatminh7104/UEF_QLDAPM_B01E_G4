@inject VillaManagementWeb.Services.Implementations.LayoutService _layoutService
@{
    // 2. Lấy dữ liệu danh sách phòng
    var roomCategories = await _layoutService.GetRoomCategories();
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Wandering Rose</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;700&family=Gilda+Display&family=Barlow:wght@300;400&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        @@media all and (min-width: 992px) {
            .dropdown-menu
        {
            background-color: rgba(0, 0, 0, 0.85); /* Nền đen mờ */
            border: none;
            border-radius: 0;
            margin-top: 0; /* Sát vào thanh menu chính */
        }

        /* Chữ trong menu con */
        .dropdown-item {
            color: #fff !important; /* Chữ trắng */
            padding: 12px 20px;
            transition: all 0.3s;
        }

            /* Khi di chuột vào mục con -> đổi màu nền */
            .dropdown-item:hover {
                background-color: #A0734F; /* Màu vàng đồng chủ đạo */
                color: #fff !important;
                padding-left: 25px; /* Hiệu ứng đẩy chữ sang phải */
            }
            /* Ẩn mặc định */
            .navbar .nav-item .dropdown-menu

        {
            display: none;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease-in-out;
            display: block; /* Cần block để transition hoạt động, nhưng dùng visibility để ẩn */
        }

        /* Hiện khi Hover */
        .navbar .nav-item:hover .dropdown-menu {
            display: block;
            opacity: 1;
            visibility: visible;
            margin-top: 0;
        }

        }

        /* Fix lỗi mũi tên dropdown bị lệch */
        .dropdown-toggle::after {
            vertical-align: middle;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>



<body class="home">
    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    }

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top custom-navbar">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/images/logo.png" style="height:50px;">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                            href="/">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "About" ? "active" : "")" href="/About">Về chúng tôi</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(currentController == "Rooms" ? "active" : "")"
                           href="#"
                           id="navbarDropdown"
                           role="button"
                           
                           aria-expanded="false">
                            Giới thiệu phòng
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (roomCategories != null && roomCategories.Any())
                            {
                                foreach (var cat in roomCategories)
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Rooms"
                                           asp-action="CategoryDetails"
                                           asp-route-categoryName="@cat">
                                            @cat
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li><span class="dropdown-item text-muted">Đang cập nhật...</span></li>
                            }

                            <li><hr class="dropdown-divider"></li>                           
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Events" ? "active" : "")" href="/events">Dịch vụ &
                             Sự kiện
                            </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Tours" ? "active" : "")" href="/tours">
                            Trải nghiệm & Tour
                            </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Pictures" ? "active" : "")" href="/pictures">Hình
                            ảnh</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Contacts" ? "active" : "")" href="/contacts">Liên
                            hệ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main id="tw-scope">
        @RenderBody()
    </main>

    <footer class="main-footer" style="background-color: #A0734F;">
        @await Component.InvokeAsync("NewsEvents")

        <div class="footer-links py-5 text-white" style="border-top: 1px solid rgba(255,255,255,0.2);">
            <div class="container text-center mb-5">
                <img src="~/images/logo_white.png" alt="Logo" class="mb-3" style="height: 100px;">
            </div>
            <div class="container">
                <div class="row g-4 small text-uppercase fw-light">
                    <div class="col-md-2 col-6">
                        <h6 class="fw-bold mb-3">TRANG CHỦ</h6>
                        <ul class="list-unstyled">
                            <li><a href="/About" class="text-white text-decoration-none">Về chúng tôi</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Sự kiện âm nhạc</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Thư viện hình ảnh</a></li>
                            <li><a href="/News" class="text-white text-decoration-none">Tin tức</a></li>
                            <li><a href="/FAQ" class="text-white text-decoration-none">FAQ</a></li>
                        </ul>
                    </div>
                    <div class="col-md-2 col-6">
                        <h6 class="fw-bold mb-3">HẠNG PHÒNG</h6>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-white text-decoration-none">Khu Wooden House</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Forest Room</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Deluxe Room</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Family Room</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-6">
                        <h6 class="fw-bold mb-3">TRẢI NGHIỆM & TOUR</h6>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-white text-decoration-none">Tour Vườn Quốc Gia Ba Vì</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Tour Ao Vua</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Khoang Xanh - Suối Tiên</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-12 ms-auto">
                        <h6 class="fw-bold mb-3">LIÊN HỆ</h6>
                        <p class="mb-1">092 981 6699</p>
                        <p class="mb-1">booking@thewanderingrosebavi.com</p>
                        <p class="mb-3">Thôn Mít Mái, Ba Vì, Hà Nội</p>
                        <a href="/Contact" class="btn btn-outline-light btn-sm rounded-0">GỬI LIÊN HỆ →</a>
                    </div>
                </div>

                <div class="row mt-5 pt-4 border-top border-secondary opacity-75 small">
                    <div class="col-md-6 text-center text-md-start">
                        <p>© Copyright 2025 The Wandering Rose</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end social-icons">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-pinterest-p"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({ duration: 1000, once: true });
</script>
