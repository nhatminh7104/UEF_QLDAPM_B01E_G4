@{
    ViewData["Title"] = "Về chúng tôi";
    Layout = "_Layout";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<style>
    /* --- CẤU HÌNH CHUNG --- */
    body {
        font-family: 'Montserrat', sans-serif;
        color: #555;
        background-color: #fffaf7;
        margin: 0;
        overflow-x: hidden;
    }

    h1, h2, h3, h4 {
        font-family: 'Playfair Display', serif;
        color: #a67c52;
    }

    /* --- HERO BANNER --- */
    .hero-section {
        position: relative;
        width: 100%;
        height: 60vh;
        /* ĐÃ SỬA: Đường dẫn đúng vào thư mục images/introduces */
        background: url('/images/introduces/image1.png') center center / cover no-repeat;
        background-attachment: fixed; /* Hiệu ứng Parallax */
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .hero-overlay {
        background: rgba(0, 0, 0, 0.25);
        position: absolute;
        inset: 0;
    }

    .hero-title {
        position: relative;
        z-index: 2;
        color: #fff;
        font-size: 4rem;
        font-style: italic;
        text-shadow: 2px 2px 5px rgba(0,0,0,0.3);
        animation: slideUpFade 1.5s ease-out;
    }

    @@keyframes slideUpFade {
        0% {
            opacity: 0;
            transform: translateY(50px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* --- CÁC SECTION CHUNG --- */
    .section-padding {
        padding: 100px 0;
    }

    .sub-heading {
        font-size: 2.5rem;
        color: #a67c52;
        margin-bottom: 30px;
        line-height: 1.2;
        position: relative;
        display: inline-block;
    }

        .sub-heading::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -10px;
            width: 60px;
            height: 2px;
            background: #a67c52;
        }

    .text-center .sub-heading::after {
        left: 50%;
        transform: translateX(-50%);
    }

    .story-desc, .vision-text {
        text-align: justify;
        line-height: 1.8;
        font-size: 1rem;
        color: #777;
        margin-bottom: 20px;
    }

    /* --- ẢNH TĨNH --- */
    .story-images-row {
        margin-top: 50px;
    }

    .story-img-item, .vision-img {
        width: 100%;
        object-fit: cover;
        border-radius: 4px;
        transition: all 0.5s ease;
        box-shadow: 5px 5px 15px rgba(0,0,0,0.05);
    }

    .story-img-item {
        height: 350px;
    }

    .vision-img {
        height: 450px;
    }

        .story-img-item:hover, .vision-img:hover {
            transform: scale(1.03) translateY(-5px);
            box-shadow: 15px 15px 30px rgba(166, 124, 82, 0.3);
        }

    /* --- ZIGZAG LAYOUT --- */
    .zigzag-row {
        margin-bottom: 80px;
        align-items: center;
    }

    .vision-content {
        padding: 0 50px;
    }

    .vision-title {
        font-size: 2rem;
        margin-bottom: 25px;
        color: #a67c52;
    }

    /* --- GALLERY SLIDER --- */
    .gallery-teaser {
        text-align: center;
        padding-bottom: 80px;
    }

    .btn-more {
        display: inline-block;
        padding: 12px 35px;
        background-color: #a67c52;
        color: #fff;
        text-decoration: none;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 2px;
        font-weight: 500;
        transition: all 0.3s ease;
        margin-bottom: 50px;
        border-radius: 2px;
        box-shadow: 0 5px 15px rgba(166, 124, 82, 0.2);
    }

        .btn-more:hover {
            background-color: #8e6a45;
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(166, 124, 82, 0.4);
        }

    .slider-wrapper {
        position: relative;
        width: 100%;
        padding: 0 60px;
        margin-bottom: 60px;
    }

    .scrolling-wrapper {
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
        gap: 25px;
        padding: 20px 0;
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

        .scrolling-wrapper::-webkit-scrollbar {
            display: none;
        }

    .slider-card {
        flex: 0 0 32%;
        height: 260px;
        position: relative;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.4s ease;
    }

        .slider-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(166, 124, 82, 0.25);
        }

        .slider-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

        .slider-card:hover img {
            transform: scale(1.1);
        }

    .video-placeholder {
        width: 100%;
        height: 100%;
        background-color: #f4ede6;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #a67c52;
        font-size: 3.5rem;
        border: 2px solid #e8e0d5;
        transition: 0.3s;
    }

    .slider-card:hover .video-placeholder {
        background-color: #a67c52;
        color: white;
        border-color: #a67c52;
    }

    .nav-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background-color: #fff;
        color: #a67c52;
        border: 2px solid #a67c52;
        cursor: pointer;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

        .nav-btn:hover {
            background-color: #a67c52;
            color: #fff;
            transform: translateY(-50%) scale(1.1);
            box-shadow: 0 8px 20px rgba(166, 124, 82, 0.3);
        }

    .btn-prev {
        left: 5px;
    }

    .btn-next {
        right: 5px;
    }

    /* RESPONSIVE */
    @@media (max-width: 768px) {
        .hero-section {
            background-attachment: scroll;
        }

        .hero-title {
            font-size: 2.8rem;
        }

        .sub-heading {
            font-size: 2rem;
        }

        .section-padding {
            padding: 60px 0;
        }

        .vision-content {
            padding: 30px 0;
        }

        .zigzag-row {
            flex-direction: column;
            gap: 30px;
        }

            .zigzag-row.reverse {
                flex-direction: column-reverse;
            }

        .slider-card {
            flex: 0 0 80%;
            height: 220px;
        }

        .slider-wrapper {
            padding: 0 15px;
        }

        .nav-btn {
            width: 35px;
            height: 35px;
            font-size: 0.9rem;
        }

        .story-img-item, .vision-img {
            height: auto;
            max-height: 400px;
        }
    }
</style>

<div class="hero-section">
    <div class="hero-overlay"></div>
    <h1 class="hero-title">Về chúng tôi</h1>
</div>

<div class="container">

    <div class="story-section section-padding">
        <div class="row align-items-center" data-aos="fade-up" data-aos-duration="1000">
            <div class="col-md-5">
                <h2 class="sub-heading">Câu chuyện hình<br>thành Villa</h2>
            </div>
            <div class="col-md-7">
                <p class="story-desc">
                    The Wandering Rose Villa ra đời từ giấc mơ về một chốn nghỉ dưỡng bình yên giữa lòng Ba Vì xanh mát.
                    Chúng tôi mong muốn tạo nên một không gian gần Hà Nội nơi du khách có thể tìm lại sự tĩnh tại.
                </p>
                <p class="story-desc">
                    Nơi đây sẽ là điểm dừng chân lý tưởng để bạn tận hưởng thiên nhiên, lưu giữ kỷ niệm và tìm lại sự cân bằng.
                </p>
            </div>
        </div>

        <div class="row story-images-row">
            <div class="col-md-4 mb-3" data-aos="fade-up" data-aos-delay="100">
                <img src="/images/introduces/image2.png" class="story-img-item" alt="Ảnh nhỏ 1">
            </div>
            <div class="col-md-4 mb-3" data-aos="fade-up" data-aos-delay="300">
                <img src="/images/introduces/image3.png" class="story-img-item" alt="Ảnh nhỏ 2">
            </div>
            <div class="col-md-4 mb-3" data-aos="fade-up" data-aos-delay="500">
                <img src="/images/introduces/image1.png" class="story-img-item" alt="Ảnh nhỏ 3">
            </div>
        </div>
    </div>

    <div class="text-center mb-5" data-aos="fade-in">
        <h2 class="sub-heading">Tầm nhìn & Giá trị</h2>
    </div>

    <div class="vision-section section-padding">
        <div class="row zigzag-row">
            <div class="col-md-6" data-aos="fade-right" data-aos-duration="1000">
                <img src="/images/introduces/image4.png" class="vision-img" alt="Tầm nhìn">
            </div>
            <div class="col-md-6" data-aos="fade-left" data-aos-duration="1000">
                <div class="vision-content">
                    <h3 class="vision-title">Tầm nhìn</h3>
                    <p class="vision-text">Chúng tôi hướng đến việc trở thành biểu tượng nghỉ dưỡng hàng đầu tại khu vực, nơi kết hợp hoàn hảo giữa kiến trúc hiện đại và vẻ đẹp nguyên bản của thiên nhiên.</p>
                </div>
            </div>
        </div>

        <div class="row zigzag-row reverse mt-5">
            <div class="col-md-6" data-aos="fade-right" data-aos-duration="1000">
                <div class="vision-content">
                    <h3 class="vision-title">Giá trị</h3>
                    <p class="vision-text">
                        <strong>Sự tận tâm:</strong> Phục vụ bằng cả trái tim.<br>
                        <strong>Thiên nhiên:</strong> Gìn giữ cảnh quan xanh.<br>
                        <strong>Kết nối:</strong> Gắn kết gia đình và những tâm hồn đồng điệu.
                    </p>
                </div>
            </div>
            <div class="col-md-6" data-aos="fade-left" data-aos-duration="1000">
                <img src="/images/introduces/image5.png" class="vision-img" alt="Giá trị cốt lõi">
            </div>
        </div>
    </div>

    <div class="gallery-teaser section-padding" data-aos="fade-up" data-aos-offset="200">
        <h2 class="sub-heading">Hình ảnh & Video</h2>
        <br>
        <a asp-controller="Pictures" asp-action="Index" class="btn-more">Xem Thêm Thư Viện <i class="fa-solid fa-arrow-right ms-2"></i></a>

        <div class="d-flex align-items-center mb-3">
            <h4 class="m-0 flex-grow-1 text-start" style="font-family:'Montserrat'; text-transform:uppercase; font-size:0.9rem; letter-spacing:2px; font-weight:600;">Không gian Villa</h4>
            <div style="height:1px; background:#e0d0c0; flex-grow:10; margin-left:20px;"></div>
        </div>

        <div class="slider-wrapper">
            <button class="nav-btn btn-prev" onclick="scrollSlider('img-slider', -1)"><i class="fa-solid fa-chevron-left"></i></button>

            <div class="scrolling-wrapper" id="img-slider">
                <div class="slider-card"><img src="/images/images&videos/image.png" alt="Img"></div>
                <div class="slider-card"><img src="/images/images&videos/image1.png" alt="Img"></div>
                <div class="slider-card"><img src="/images/images&videos/image2.png" alt="Img"></div>
                <div class="slider-card"><img src="/images/images&videos/image3.png" alt="Img"></div>
                <div class="slider-card"><img src="/images/images&videos/image4.png" alt="Img"></div>
                <div class="slider-card"><img src="/images/images&videos/image5.png" alt="Img"></div>
                <div class="slider-card"><img src="/images/images&videos/image6.png" alt="Img"></div>
            </div>

            <button class="nav-btn btn-next" onclick="scrollSlider('img-slider', 1)"><i class="fa-solid fa-chevron-right"></i></button>
        </div>

        <br><br>

        <div class="d-flex align-items-center mb-3">
            <h4 class="m-0 flex-grow-1 text-start" style="font-family:'Montserrat'; text-transform:uppercase; font-size:0.9rem; letter-spacing:2px; font-weight:600;">Trải nghiệm thực tế</h4>
            <div style="height:1px; background:#e0d0c0; flex-grow:10; margin-left:20px;"></div>
        </div>
        <div class="slider-wrapper">
            <button class="nav-btn btn-prev" onclick="scrollSlider('vid-slider', -1)"><i class="fa-solid fa-chevron-left"></i></button>

            <div class="scrolling-wrapper" id="vid-slider">
                <div class="slider-card"><div class="video-placeholder"><i class="fa-solid fa-play"></i></div></div>
                <div class="slider-card"><div class="video-placeholder"><i class="fa-solid fa-play"></i></div></div>
                <div class="slider-card"><div class="video-placeholder"><i class="fa-solid fa-play"></i></div></div>
                <div class="slider-card"><div class="video-placeholder"><i class="fa-solid fa-play"></i></div></div>
            </div>

            <button class="nav-btn btn-next" onclick="scrollSlider('vid-slider', 1)"><i class="fa-solid fa-chevron-right"></i></button>
        </div>

    </div>

</div>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        offset: 120,
        once: true,
        easing: 'ease-in-out-quad'
    });

    function scrollSlider(sliderId, direction) {
        const slider = document.getElementById(sliderId);
        const cardWidth = slider.querySelector('.slider-card').offsetWidth;
        const gap = 25;
        const scrollAmount = cardWidth + gap;

        if (direction === 1) {
            slider.scrollLeft += scrollAmount;
        } else {
            slider.scrollLeft -= scrollAmount;
        }
    }
</script>