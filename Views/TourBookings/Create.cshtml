@model VillaManagementWeb.ViewModels.TourCheckoutVM
@{
    ViewData["Title"] = "Đặt Tour";
    Layout = "~/Views/Shared/_Layout_Tailwind.cshtml";
}

<div class="bg-gray-50 min-h-screen py-10">
    <div class="container mx-auto px-4 max-w-6xl">
        <form asp-action="Create" method="post" class="flex flex-col lg:flex-row gap-8">
            <input type="hidden" asp-for="TourId" />

            <div class="flex-1 space-y-6">
                <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                    <h2 class="text-xl font-bold text-gray-800 mb-4 border-b pb-2">Thông tin đặt Tour</h2>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block text-xs font-bold text-gray-700 mb-1">Ngày đi</label>
                            <input asp-for="TourDate" type="date" class="w-full border-gray-300 rounded text-sm focus:ring-[#A67C52]">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-700 mb-1">Số khách</label>
                            <input asp-for="NumberOfPeople" type="number" min="1" class="w-full border-gray-300 rounded text-sm focus:ring-[#A67C52]" onchange="updateTotal(this.value)">
                        </div>
                    </div>

                    <div class="space-y-4">
                        <div>
                            <label class="block text-xs font-bold text-gray-700 mb-1">Họ tên *</label>
                            <input asp-for="CustomerName" class="w-full border-gray-300 rounded text-sm focus:ring-[#A67C52]" placeholder="Nguyen Van A">
                            <span asp-validation-for="CustomerName" class="text-red-500 text-xs"></span>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-xs font-bold text-gray-700 mb-1">SĐT *</label>
                                <input asp-for="CustomerPhone" class="w-full border-gray-300 rounded text-sm focus:ring-[#A67C52]">
                                <span asp-validation-for="CustomerPhone" class="text-red-500 text-xs"></span>
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-gray-700 mb-1">Email</label>
                                <input asp-for="CustomerEmail" class="w-full border-gray-300 rounded text-sm focus:ring-[#A67C52]">
                            </div>
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-700 mb-1">Ghi chú</label>
                            <textarea asp-for="Note" class="w-full border-gray-300 rounded text-sm focus:ring-[#A67C52]" rows="2"></textarea>
                        </div>
                    </div>
                </div>

                <button type="submit" class="w-full bg-[#1a3b5d] hover:bg-[#A67C52] text-white font-bold py-4 rounded-lg shadow-lg uppercase transition">
                    Xác nhận đặt Tour
                </button>
            </div>

            <div class="w-full lg:w-96">
                <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200 sticky top-24">
                    <h3 class="text-lg font-bold text-gray-800 mb-4 border-b pb-2">Vé Tour của bạn</h3>

                    <div class="flex gap-4 mb-4">
                        <img src="@Model.ImageUrl" class="w-20 h-20 object-cover rounded shadow-sm">
                        <div>
                            <h4 class="font-bold text-sm text-gray-900 line-clamp-2">@Model.TourName</h4>
                            <span class="text-xs text-gray-500">@Model.Duration giờ</span>
                        </div>
                    </div>

                    <div class="space-y-3 text-sm border-t pt-4 text-gray-600">
                        <div class="flex justify-between">
                            <span>Đơn giá:</span>
                            <span class="font-bold" id="priceDisplay">@Model.PricePerPerson.ToString("N0") ₫</span>
                        </div>
                        <div class="flex justify-between text-[#A67C52]">
                            <span>Thành tiền (tạm tính):</span>
                            <span class="font-bold text-xl" id="totalDisplay">@Model.TotalAmount.ToString("N0") ₫</span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Script đơn giản để cập nhật giá tiền khi đổi số lượng người
        const pricePerPerson = @Model.PricePerPerson;
        function updateTotal(qty) {
            if(qty < 1) qty = 1;
            const total = pricePerPerson * qty;
            document.getElementById('totalDisplay').innerText = total.toLocaleString('vi-VN') + ' ₫';
        }
    </script>
}