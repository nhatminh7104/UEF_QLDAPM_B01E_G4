@model VillaManagementWeb.Models.Booking
@{
    ViewData["Title"] = "Đặt phòng thành công";
    Layout = "~/Views/Shared/_Layout_Tailwind.cshtml";
    // Tính số đêm để hiển thị
    var nights = (Model.CheckOut - Model.CheckIn).TotalDays;
    if (nights < 1) nights = 1;
    nights = Math.Ceiling(nights);
}

<div class="bg-gray-50 min-h-screen py-10 flex items-center justify-center">
    <div class="container max-w-4xl mx-auto px-4">

        <div class="text-center mb-10">
            <h1 class="text-4xl font-serif text-[#A67C52] mb-2">Đặt phòng thành công!</h1>
            <p class="text-gray-600">Cảm ơn bạn đã lựa chọn <strong>The Wandering Rose</strong>.</p>
            <p class="text-sm text-gray-500 mt-2">Vui lòng hoàn tất thanh toán để giữ phòng. Đơn hàng sẽ tự động hủy sau <strong>24h</strong> nếu chưa thanh toán.</p>
        </div>

        <div class="bg-white rounded-xl shadow-xl overflow-hidden flex flex-col md:flex-row">

            <div class="w-full md:w-1/2 p-8 border-r border-gray-100">
                <h3 class="font-bold text-gray-800 uppercase tracking-widest mb-6 border-b pb-2">Chi tiết đơn hàng</h3>

                <div class="space-y-4 text-sm">
                    <div class="flex justify-between">
                        <span class="text-gray-500">Mã đặt phòng:</span>
                        <span class="font-bold text-lg text-[#A67C52]">#@Model.Id</span>
                    </div>

                    <div class="flex justify-between">
                        <span class="text-gray-500">Khách hàng:</span>
                        <span class="font-medium">@Model.CustomerName</span>
                    </div>

                    <div class="flex justify-between">
                        <span class="text-gray-500">Loại phòng:</span>
                        <span class="font-medium">@(Model.Room?.RoomCategory?.Name ?? "Villa") - @(Model.Room?.RoomNumber)</span>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-lg mt-4 space-y-2">
                        <div class="flex justify-between">
                            <span>Nhận phòng:</span>
                            <strong>@Model.CheckIn.ToString("dd/MM/yyyy HH:mm")</strong>
                        </div>
                        <div class="flex justify-between">
                            <span>Trả phòng:</span>
                            <strong>@Model.CheckOut.ToString("dd/MM/yyyy HH:mm")</strong>
                        </div>
                        <div class="flex justify-between text-xs text-gray-400">
                            <span>Thời gian:</span>
                            <span>@nights đêm</span>
                        </div>
                    </div>

                    <div class="pt-4 border-t mt-4">
                        <div class="flex justify-between items-end">
                            <span class="text-gray-600 font-bold">Tổng thanh toán:</span>
                            <span class="text-2xl font-bold text-[#A67C52]">@Model.TotalAmount.ToString("N0") đ</span>
                        </div>
                        <p class="text-xs text-gray-400 text-right mt-1">(Đã bao gồm thuế & phí dịch vụ)</p>
                    </div>
                </div>

                <div class="mt-8">
                    <a href="/" class="block w-full text-center border border-gray-300 py-3 rounded text-gray-600 hover:bg-gray-50 transition">
                        &larr; Quay về trang chủ
                    </a>
                </div>
            </div>

            <div class="w-full md:w-1/2 p-8 bg-[#FDFBF7] flex flex-col items-center justify-center text-center">
                <h3 class="font-bold text-gray-800 uppercase tracking-widest mb-2">Quét mã thanh toán</h3>
                <p class="text-xs text-gray-500 mb-6">Sử dụng App Ngân hàng hoặc Ví điện tử</p>

                <div class="bg-white p-4 rounded-xl shadow-sm mb-6 border border-gray-200">
                    <img src="https://img.vietqr.io/image/VCB-123456789999-compact2.jpg?amount=@((int)Model.TotalAmount)&addInfo=DP%20@Model.Id&accountName=THE%20WANDERING%20ROSE"
                         alt="VietQR Payment" class="w-48 h-48 object-contain">
                </div>

                <div class="text-sm space-y-1 text-gray-600">
                    <p>Ngân hàng: <strong>Vietcombank</strong></p>
                    <p>Số tài khoản: <strong>1234.5678.9999</strong></p>
                    <p>Chủ tài khoản: <strong>THE WANDERING ROSE</strong></p>
                    <p>Nội dung: <strong class="text-blue-600">DP @Model.Id</strong></p>
                </div>

                <div class="mt-8 w-full">
                    <button onclick="window.print()" class="w-full bg-[#A67C52] text-white py-3 rounded font-bold hover:bg-[#8e6a46] transition shadow-lg shadow-orange-900/20">
                        <i class="fas fa-download mr-2"></i> Lưu biên lai
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>